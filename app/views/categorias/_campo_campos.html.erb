<fieldset class="campo">
  <%= f.select :tipo_campo, %w[texto texto_extenso numero decimal check_box] %>
  <%= f.text_field :nombre, placeholder: :"nombre del campo" %>
  <%= f.check_box :requerido %> Requerido |
  <%= f.hidden_field :_destroy %>
  <%= link_to :"Borrar", '#', class: :"remove_fields" %>
</fieldset>