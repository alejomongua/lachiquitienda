  <%= render 'shared/error_messages', object: form.object %>

  <div class="field">
    <%= form.label :nombre, :"Nombre de la categoría" %>
    <%= form.text_field :nombre %>
  </div>

  <%= form.fields_for :foto_attributes do |f| %>
    <fieldset class="campo">
      <div class="row">
        <div class="span9">
          <div class="row">
            <div class="span3 marca">
              <%= f.label :nombre, "Nombre/descripción de la imagen" %>
            </div>
            <div class="span5">
              <%= f.text_field :nombre %>
            </div>
          </div>
          <div class="row">
            <div class="span3 marca">
              <%= f.label :imagen %>
            </div>
            <div class="span5">
              <%= f.file_field :imagen %>
            </div>
          </div>
        </div>
      </div>
    </fieldset> 
  <% end %>

  <%= form.fields_for :campos do |builder| %>
    <%= render 'campo_campos', f: builder %>
  <% end %>

  <%= link_to_add_fields "Añadir campo", form, :campos %>
