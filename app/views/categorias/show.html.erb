<% provide(:titulo, @categoria.nombre) %>

<div class="detalles-categoria">
  <div class="row">
    <div class="hero-unit">
      <%= image_tag @categoria.foto.imagen.url(:thumb), class: :"imagen-categoria" if @categoria.foto %>
      <h1> <%= @categoria.nombre %> </h1>
      <div class="clearfix"></div>
    </div>
  </div>
  <div class="row">
    <% @categoria.productos.each_with_index do |producto,i| %>
      <% if (i != 0) && (i % 4 == 0) %>
        <div class="row">
      <% end %>
      <%= render 'productos/item_lista', producto: producto %>
      <% if (i != 0) && (i % 4 == 0) %>
        </div>
      <% end %>
    <% end %>    
  </div>
  <hr>
  <% if identificado? && usuario_actual.admin %>
    <div class="acciones">
      <%= link_to "Editar", edit_categoria_path(@categoria) %>
      | <%= link_to "Eliminar", @categoria, method: :delete, prompt: "Este cambio no se puede deshacer. Â¿Desea continuar?" %>
    </div>
  <% end %>
</div>
