<% provide :titulo, "Editar #{@producto.nombre}" %>
<h1>Editar <%= @producto.nombre %></h1>

<%= form_for(@producto) do |f| %>

  <%= render partial: 'form', locals: { form: f, producto: @producto } %>

  <div class="actions">
    <%= f.submit "Editar producto", class: "btn btn-info btn-large boton-formulario" %>
  </div>
<% end %>

<%= link_to 'Cancelar', @producto %>