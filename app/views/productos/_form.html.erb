<%= form_for(@producto) do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :descripcion %>
    <%= f.text_area :descripcion %>
  </div>

  <div class="field">
    <%= f.label :precio %>
    <%= f.number_field :precio %>
  </div>  

  <div class="field">
    <%= f.label :cantidad, "Cantidad en stock" %>
    <%= f.number_field :cantidad %>
  </div>

  <div class="field">
    <%= f.check_box :publicado %> Publicado
  </div>

  <div class="field">
    <label>Etiquetas</label>
    <%= f.text_field :etiqueta_list, size: 50 %>
  </div>
  <% if @producto.categoria.nil? %>
    <div class="field">
      <%= f.label :categoria, "Categoría" %>
      <%= f.collection_select(:categoria_id, Categoria.all, :id, :nombre, {}, class: "chzn-select", "data-placeholder" => "Seleccione una categoria") %>
    </div>
    <%= link_to "Crear nueva categoría", new_categoria_path %>
  <% else %>

    <%= f.hidden_field :categoria_id %>
    <%= f.fields_for :propiedades, OpenStruct.new(@producto.propiedades) do |builder| %>
      <% @producto.categoria.campos.each do |field| %>
        <%= render "productos/campos/#{field.tipo_campo}", campo: field, f: builder %>
      <% end %>
    <% end %>
  <% end %>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
