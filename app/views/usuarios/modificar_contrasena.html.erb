<% provide(:titulo, :"Actualizar mi contraseña") %>
<h1>Actualizar mi contraseña</h1>
<div class="row">
  <div class="span7">
    <%= form_for(@usuario) do |f| %> 
      <%= render 'shared/error_messages', object: f.object %>
      <div class="row centrado">
        <%= imagen_de @usuario %>
      </div>
      <div class="row">
        <div class="span4 marca">
          <%= f.label :password, "Contraseña" %>
        </div>
        <div class="span3">
          <%= f.password_field :password %>
        </div>
      </div>
      <div class="row">
        <div class="span4 marca">
          <%= f.label :password_confirmation, "Confirma tu contraseña" %>
        </div>
        <div class="span3">
          <%= f.password_field :password_confirmation %>
        </div>
      </div>
      <div class="centrado span7">
        <%= f.submit "Actualizar contraseña", class: "btn btn-info btn-large boton-formulario" %>
      </div>
    <% end %>
  </div>
  <div class="span5">
    
  </div>
</div>