<%= form_for(@usuario) do |f| %>
  
  <%= render 'shared/error_messages', object: f.object %>

  <div class="row">
    <div class="span4 marca">
      <%= f.label :nombre, "Nombre" %>
    </div>
    <div class="span3">
      <%= f.text_field :nombre %>
    </div>
  </div>
  <div class="row">
    <div class="span4 marca">
      <%= f.label :nick, "¿Como te gustaría que te llamemos?" %>
    </div>
    <div class="span3">
      <%= f.text_field :nick %>
    </div>
  </div>
  <div class="row">
    <div class="span4 marca">
      <%= f.label :genero, "Género:" %>
    </div>
    <div class="span3">
      <div>
        <%= f.radio_button :genero, "Hombre" %> Hombre
      </div>
      <div>
        <%= f.radio_button :genero, "Mujer" %> Mujer
      </div>
    </div>
  </div>
  <div class="row">
    <div class="span4 marca">
      <%= f.label :email, "Correo electrónico" %>
    </div>
    <div class="span3">
      <%= f.text_field :email %>
    </div>
  </div>
  <div class="row">
    <div class="span4 marca">
      <%= f.label :password, "Contraseña" %>
    </div>
    <div class="span3">
      <%= f.password_field :password %>
    </div>
  </div>
  <div class="row">
    <div class="span4 marca">
      <%= f.label :password_confirmation, "Confirma tu contraseña" %>
    </div>
    <div class="span3">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>
  <div class="row">
    <div class="span4 marca">
      <%= f.label :acerca_de_mi, "Cuentanos algo sobre tí" %>
    </div>
    <div class="span3">
      <%= f.text_area :acerca_de_mi, rows: 8 %>
    </div>
  </div>
  <div class="centrado span7">
    <%= f.submit "Regístrate", class: "btn btn-info btn-large boton-formulario" %>
  </div>

<% end %>