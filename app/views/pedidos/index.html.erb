<h1>Listing pedidos</h1>

<table>
  <tr>
    <th>Guia</th>
    <th>Costo envio</th>
    <th>Tipo envio</th>
    <th>Direccion envio</th>
    <th>Ciudad envio</th>
    <th>Destinatario</th>
    <th>Tipo pago</th>
    <th>Estado</th>
    <th>Usuario</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pedidos.each do |pedido| %>
  <tr>
    <td><%= pedido.guia %></td>
    <td><%= pedido.costo_envio %></td>
    <td><%= pedido.tipo_envio %></td>
    <td><%= pedido.direccion_envio %></td>
    <td><%= pedido.ciudad_envio %></td>
    <td><%= pedido.destinatario %></td>
    <td><%= pedido.tipo_pago %></td>
    <td><%= pedido.estado %></td>
    <td><%= pedido.usuario %></td>
    <td><%= link_to 'Show', pedido %></td>
    <td><%= link_to 'Edit', edit_pedido_path(pedido) %></td>
    <td><%= link_to 'Destroy', pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

