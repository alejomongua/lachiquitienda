<% provide(:titulo, "Nuestro blog") %>
<h1>Nuestro blog</h1>

<% if @etiqueta %>
  <h2>Mostrando solo los etiquetados en <%= @etiqueta %> - <%= link_to 'Mostrar todos', posts_path %> </h2>
<% end %>

<%= will_paginate %>
<div class="lista posts">
  <% @posts.each do |post| %>
    <%= render 'posts/item_lista', post: post %>
  <% end %>
</div>
<%= will_paginate %>
