<div class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar collapsed" data-toggle="collapse" data-target=".nav-collapse">
         <span class="icon-bar"></span>
         <span class="icon-bar"></span>
         <span class="icon-bar"></span>
      </a>
      <%= link_to "La Chiquitienda", root_path, class: "brand" %>
      <div class="nav-collapse" id="main-menu">
        <ul class="nav" id="main-menu-left">
          <li>
            <%= link_to "Blog", posts_path %>
          </li>
          <li>
            <%= link_to "Tienda", categorias_path %>
          </li>
          <form class="navbar-search pull-left" action="">
            <input type="text" class="search-query span2" placeholder="Buscar">
          </form>
        </ul>
        <ul class="nav pull-right" id="main-menu-right">
          <% if identificado? %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <%= usuario_actual.nick %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu" id="swatch-menu">
              <li>
                <%= link_to "Mi perfil", usuario_actual %>
              </li>
              <li>
                <%= link_to "Salir", salir_path, method: :delete, id: "cerrar-sesion" %>
              </li>
            </ul>
          </li>
          <% if usuario_actual.admin %>
            <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              Administrar
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu" id="swatch-menu">
              <li>
                <%= link_to "Usuarios", usuarios_path %>
              </li>
              <li>
                <%= link_to "Nuevo post", new_post_path %>
              </li>
              <li>
                <%= link_to "Agregar producto", new_producto_path %>
              </li>
              <li>
                <%= link_to "Agregar categoría", new_categoria_path %>
              </li>
            </ul>
          </li>
          <% end %>
          <% else %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              Identifícate
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu" id="swatch-menu">
              <li class="centrado">
                <a href="/auth/facebook" title="Conectar con facebook" class="conectar-con-facebook"><img src="/images/logo-fb-200.png" alt="Conectar con facebook" /></a>
              </li>
              <li class="divider"></li>
              <li class="centrado">o puedes hacerlo con tu correo y contraseña:</li>
              <%= form_for :sesion, url: sesiones_path do |f| %>
                <li>
                  <%= f.text_field :email, placeholder: "Correo electrónico" %>
                </li>
                <li>
                  <%= f.password_field :password, placeholder: "Contraseña" %>
                </li>
                <li>
                  <%= f.check_box :recordar, {}, "si", "no" %> Recuerdame
                </li>
                <li class="boton">
                  <%= f.submit "Ingresar", class: "btn btn-small btn-info center" %>
                </li>
                <li>
                  <%= link_to "¡Olvidé mi contraseña!", olvide_contrasena_path %>
                </li>
              <% end %>
            </ul>
          </li>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              Regístrate
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu" id="swatch-menu">
              <li class="centrado">
                <a href="/auth/facebook" title="Conectar con facebook" class="conectar-con-facebook"><img src="/images/logo-fb-200.png" alt="Conectar con facebook" /></a>
              </li>
              <li class="divider"></li>
              <li class="centrado">o llena los siguientes datos:</li>
              <%= form_for :usuario, url: usuarios_path do |f| %>
                <li>
                  <%= f.text_field :nombre, placeholder: "Nombre" %>
                </li>
                <li>
                  <%= f.text_field :email, placeholder: "Correo electrónico", "autocomplete" => "off" %>
                </li>
                <li>
                  <%= f.password_field :password, placeholder: "Contraseña", "autocomplete" => "off" %>
                </li>
                <li>
                  <%= f.password_field :password_confirmation, placeholder: "Confirma tu contraseña", "autocomplete" => "off" %>
                </li>
                <li class="boton">
                  <%= f.submit "Regístrate", class: "btn btn-small btn-info center" %>
                </li>
                <li class="normal">
                  Conoce nuestra <%= link_to "política de privacidad", politica_de_privacidad_path, target: "_blank" %>
                </li>
              <% end %>
            </ul>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
 </div>